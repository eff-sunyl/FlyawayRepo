<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Flyaway</display-name>
  <welcome-file-list>
    <welcome-file>search.jsp</welcome-file>      
  </welcome-file-list>
  <servlet>
     <description>Login Controller</description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.flyaway.model.login.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>LoginServlet</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
   <servlet>
     <description>Search Controller</description>
    <display-name>Search Servlet</display-name>
    <servlet-name>SearchController</servlet-name>
    <servlet-class>com.flyaway.controller.SearchController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>SearchController</servlet-name>
  <url-pattern>/search</url-pattern>
  </servlet-mapping>
     <servlet>
     <description>Booking Controller</description>
    <display-name>Book Servlet</display-name>
    <servlet-name>BookServlet</servlet-name>
    <servlet-class>com.flyaway.controller.BookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>BookServlet</servlet-name>
  <url-pattern>/bookFlight</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Ticket Controller</description>
    <display-name>Ticket Servlet</display-name>
    <servlet-name>TicketController</servlet-name>
    <servlet-class>com.flyaway.controller.TicketController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>TicketController</servlet-name>
  <url-pattern>/ticket</url-pattern>
  </servlet-mapping>
    <servlet>
    <description>Payment Controller</description>
    <display-name>Payment Servlet</display-name>
    <servlet-name>PaymentServlet</servlet-name>
    <servlet-class>com.flyaway.controller.PaymentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>PaymentServlet</servlet-name>
  <url-pattern>/payment</url-pattern>
  </servlet-mapping>
  
  
</web-app>